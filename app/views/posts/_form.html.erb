<%= form_for @post do |post_form| %>

  <div class="form-group">
    <%= post_form.label :title %>
    <%= post_form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= post_form.label :body %>
    <%= post_form.text_area :body, class: "form-control"  %>
  </div>



  <%= post_form.collection_check_boxes( :tag_ids, Tag.all, :id, :name) %><br/>

  <%= post_form.collection_radio_buttons( :category_id, Category.all, :id, :name) %><br/>

  <%= post_form.collection_select( :category_id, Category.all, :id, :name) %>
  <%= select_tag( :category_id, options_for_select( @category_options ) ) %><br />

    <%= post_form.collection_select( :tag_ids, Tag.all, :id, :name, {}, multiple: true) %>


    <%= post_form.fields_for :comments do |comment_form| %>
      <h2>Comment Form</h2>
      <div class="form-group">
        <%= comment_form.label :body %>
        <%= comment_form.text_field :body, class: "form-control" %>

        <% if comment_form.object.persisted? %>
          <%= comment_form.label :_destroy, "delete comment?" %>
          <%= comment_form.check_box :_destroy %>
        <% end %>

      </div>
    <% end %>


      <%= post_form.fields_for :comments, Comment.new do |comment_form| %>
        <h2>Comment Form</h2>
        <div class="form-group">
          <%= comment_form.label :body %>
          <%= comment_form.text_field :body, class: "form-control" %>
        </div>
      <% end %>




    <div class="form-group">
      <%= post_form.submit "Save", class: "btn btn-primary btn-lg btn-block" %>
    </div>

<% end %>


</div>
